generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  creditLimit     Float     @default(5000)
  availableCredit Float     @default(5000)
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  orders          Order[]
  installmentPlans InstallmentPlan[]
  payments        Payment[]
  refundRequests  RefundRequest[]
}

model Order {
  id                String    @id @default(cuid())
  userId            String
  merchantName      String
  merchantCategory  String
  totalAmount       Float
  status            String    @default("completed") // pending, completed, cancelled, refunded
  orderDate         DateTime  @default(now())
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user              User      @relation(fields: [userId], references: [id])
  installmentPlan   InstallmentPlan?
  refundRequests    RefundRequest[]
}

model InstallmentPlan {
  id                String    @id @default(cuid())
  userId            String
  orderId           String    @unique
  totalAmount       Float
  numberOfPayments  Int       @default(4)
  remainingAmount   Float
  nextPaymentDate   DateTime?
  status            String    @default("active") // active, paused, completed, cancelled
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user              User      @relation(fields: [userId], references: [id])
  order             Order     @relation(fields: [orderId], references: [id])
  payments          Payment[]
}

model Payment {
  id            String    @id @default(cuid())
  userId        String
  planId        String
  amount        Float
  dueDate       DateTime
  paidDate      DateTime?
  status        String    @default("pending") // pending, paid, failed, scheduled
  failureReason String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id])
  plan          InstallmentPlan @relation(fields: [planId], references: [id])
}

model RefundRequest {
  id        String    @id @default(cuid())
  userId    String
  orderId   String
  reason    String
  amount    Float
  status    String    @default("pending") // pending, approved, rejected, processed
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user      User      @relation(fields: [userId], references: [id])
  order     Order     @relation(fields: [orderId], references: [id])
}
